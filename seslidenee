import sounddevice as sd
import queue
import json
from vosk import Model, KaldiRecognizer
import serial
import time

# Seri baÄŸlantÄ± ayarÄ±
seri = serial.Serial('COM4', 9600)
time.sleep(2)

# Ses akÄ±ÅŸÄ± ayarÄ±
q = queue.Queue()

def callback(indata, frames, time, status):
    q.put(bytes(indata))

model = Model("vosk model konumu")
recognizer = KaldiRecognizer(model, 16000)

with sd.RawInputStream(samplerate=16000, blocksize=8000, dtype='int16',
                       channels=1, callback=callback):
    print("ðŸŽ¤ Komut bekleniyor...")

    while True:
        data = q.get()
        if recognizer.AcceptWaveform(data):
            result = recognizer.Result()
            metin = json.loads(result)["text"]
            print("ðŸ”Š Duyulan:", metin)

            if "motor saÄŸa dÃ¶n" in metin:
                seri.write(b"sag\n")
            elif "motor sola dÃ¶n" in metin:
                seri.write(b"sol\n")
